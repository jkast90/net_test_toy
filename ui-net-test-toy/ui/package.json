{
  "name": "netstream",
  "personal": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "pretty": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\"",
    "test": "jest --testPathIgnorePatterns=browser",
    "test:components": "jest --testEnvironment=jsdom --testPathPattern=components",
    "test:all": "jest",
    "test:selenium": "jest --testPathPattern=selenium",
    "test:selenium:headless": "HEADLESS=true jest --testPathPattern=selenium",
    "test:puppeteer": "jest --testPathPattern=puppeteer",
    "test:puppeteer:headless": "HEADLESS=true jest --testPathPattern=puppeteer",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "npx playwright install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "html2canvas": "^1.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-masonry-css": "^1.0.16",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.25.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.6.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.5.3",
    "puppeteer": "^23.9.0",
    "selenium-webdriver": "^4.27.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^6.3.5"
  }
}
